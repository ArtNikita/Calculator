<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonFrameLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="CalculatorButtonStyle">
        <item name="android:layout_width">@dimen/calculator_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/buttons_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CalculatorButtonStyle.Numbers">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalculatorButtonStyle.MainOperations">
        <item name="android:textColor">@color/interface_yellow</item>
    </style>

    <style name="CalculatorButtonStyle.MainOperations.LargeText">
        <item name="android:textSize">@dimen/buttons_text_size_large</item>
    </style>

    <style name="CalculatorButtonStyle.AdditionalOperations">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CalculationsTextViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>